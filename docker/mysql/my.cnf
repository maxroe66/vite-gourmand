# Configuration MySQL pour Vite et Gourmand
# Garantit UTF-8MB4 à tous les niveaux de communication

[mysqld]
# Encodage serveur
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci

# Force UTF-8MB4 pour les connexions client
init-connect='SET NAMES utf8mb4 COLLATE utf8mb4_unicode_ci'
character-set-client-handshake=FALSE

# Configuration SQL Mode (compatible MySQL 8.0)
sql_mode=STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

[client]
# Configuration client par défaut
default-character-set=utf8mb4

[mysql]
# Configuration MySQL CLI
default-character-set=utf8mb4