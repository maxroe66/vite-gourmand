# =============================================================================
# Vite & Gourmand — Configuration DEV locale
# =============================================================================
# Copier ce fichier : cp .env.example .env
# Puis renseigner les valeurs marquées <...>
# =============================================================================

# APPLICATION
APP_ENV=development
APP_DEBUG=true

# =============================================================================
# BASE DE DONNÉES — MySQL (DEV)
# =============================================================================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=vite_gourmand
DB_USER=root
DB_PASS=<VOTRE_MOT_DE_PASSE_MYSQL>

# =============================================================================
# BASE DE DONNÉES — MongoDB (DEV)
# =============================================================================
MONGO_HOST=127.0.0.1
MONGO_PORT=27017
MONGO_DB=vite_gourmand
MONGO_USERNAME=root
MONGO_PASSWORD=<VOTRE_MOT_DE_PASSE_MONGO>
# MONGO_URI=mongodb://root:<VOTRE_MOT_DE_PASSE_MONGO>@127.0.0.1:27017/vite_gourmand?authSource=admin

# =============================================================================
# JWT — Secret pour les tokens d'authentification
# =============================================================================
# Générer avec : openssl rand -hex 32
JWT_SECRET=<GÉNÉRER_AVEC_OPENSSL_RAND_HEX_32>

# =============================================================================
# MAIL — Service SMTP (Mailtrap recommandé en DEV)
# =============================================================================
# Créer un compte gratuit sur https://mailtrap.io pour intercepter les emails
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_USERNAME=<VOTRE_MAILTRAP_USERNAME>
MAIL_PASSWORD=<VOTRE_MAILTRAP_PASSWORD>
MAIL_FROM_ADDRESS=noreply@vitegourmand.fr

# =============================================================================
# GOOGLE MAPS — API Distance Matrix (calcul frais de livraison)
# =============================================================================
# Créer une clé sur https://console.cloud.google.com (activer Distance Matrix API)
GOOGLE_MAPS_API_KEY=<VOTRE_CLE_GOOGLE_MAPS>

# =============================================================================
# LOGS — Chemin du fichier de log Monolog
# =============================================================================
LOG_FILE=/home/<USER>/vite_et_gourmand/backend/logs/app.log

# =============================================================================
# DOCKER COMPOSE — Variables interpolées par docker-compose.yml
# =============================================================================
# Ces variables sont utilisées dans docker-compose.yml pour configurer les
# containers MySQL, MongoDB, phpMyAdmin et Mongo Express.
# Si vous utilisez .env.compose séparément, vous pouvez les omettre ici.

MYSQL_ROOT_PASSWORD=<MOT_DE_PASSE_ROOT_MYSQL>
MYSQL_DATABASE=vite_gourmand
MYSQL_USER=vite_user
MYSQL_PASSWORD=<MOT_DE_PASSE_USER_MYSQL>

MYSQL_TEST_ROOT_PASSWORD=<MOT_DE_PASSE_ROOT_MYSQL_TEST>
MYSQL_TEST_DATABASE=vite_gourmand_test
MYSQL_TEST_USER=vite_user
MYSQL_TEST_PASSWORD=<MOT_DE_PASSE_USER_MYSQL_TEST>

MONGO_INITDB_DATABASE=vite_gourmand
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=<MOT_DE_PASSE_ROOT_MONGO>

MONGO_TEST_INITDB_DATABASE=vite_gourmand_test
MONGO_TEST_INITDB_ROOT_USERNAME=root
MONGO_TEST_INITDB_ROOT_PASSWORD=<MOT_DE_PASSE_ROOT_MONGO_TEST>

PMA_USER=root
PMA_PASSWORD=<MOT_DE_PASSE_ROOT_MYSQL>

ME_MONGO_ADMINUSERNAME=root
ME_MONGO_ADMINPASSWORD=<MOT_DE_PASSE_ROOT_MONGO>
ME_MONGO_URL=mongodb://root:<MOT_DE_PASSE_ROOT_MONGO>@mongodb:27017

# =============================================================================
# ADMIN — Mot de passe initial du compte administrateur
# =============================================================================
# Utilisé par scripts/setup-admin-password.php pour initialiser le compte admin
ADMIN_INITIAL_PASSWORD=<MOT_DE_PASSE_ADMIN>
