{
	"info": {
		"_postman_id": "57e97f7c-a986-4e32-b0cb-137d55a495cf",
		"name": "vite & gourmand - inscription",
		"description": "Tests d'intégration pour l'inscription utilisateur (POST /api/auth/register).\n5 phases avec resets de rate limit entre chaque batch de 5 POST.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{ "key": "base_url", "value": "http://localhost:8000/api", "type": "string" },
		{ "key": "csrf_token", "value": "", "type": "string" }
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"const csrfToken = pm.cookies.get('csrfToken') || pm.collectionVariables.get('csrf_token') || pm.environment.get('csrf_token');",
					"if (csrfToken) {",
					"  pm.request.headers.upsert({ key: 'X-CSRF-Token', value: csrfToken });",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"const csrfToken = pm.cookies.get('csrfToken');",
					"if (csrfToken) {",
					"  pm.collectionVariables.set('csrf_token', csrfToken);",
					"}"
				]
			}
		}
	],
	"item": [
		{
			"name": "Phase 1 — Setup",
			"item": [
				{
					"name": "00. Init CSRF",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('CSRF token récupéré', () => {",
									"    pm.response.to.have.status(200);",
									"    const json = pm.response.json();",
									"    pm.expect(json.csrfToken).to.be.a('string');",
									"    pm.collectionVariables.set('csrf_token', json.csrfToken);",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": "{{base_url}}/csrf"
					}
				},
				{
					"name": "00a. Reset Rate Limit",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Rate limit réinitialisé', () => {",
									"    pm.response.to.have.status(200);",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "DELETE",
						"header": [],
						"url": "{{base_url}}/test/reset-rate-limit"
					}
				}
			]
		},
		{
			"name": "Phase 2 — Inscription réussie & doublon",
			"item": [
				{
					"name": "01. Inscription valide",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"type": "text/javascript",
								"exec": [
									"const ts = Date.now();",
									"const rnd = Math.floor(Math.random() * 10000);",
									"pm.collectionVariables.set('unique_email', `testuser_${ts}_${rnd}@example.com`);",
									"pm.collectionVariables.set('unique_phone', `060${String(rnd).padStart(7, '0')}`);"
								]
							}
						},
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Statut 201 attendu', () => {",
									"    pm.response.to.have.status(201);",
									"});",
									"pm.test('Réponse JSON succès avec userId', () => {",
									"    const json = pm.response.json();",
									"    pm.expect(json.success).to.eql(true);",
									"    pm.expect(json).to.have.property('userId');",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\"email\":\"{{unique_email}}\",\"firstName\":\"Test\",\"lastName\":\"User\",\"phone\":\"{{unique_phone}}\",\"address\":\"1 rue du test\",\"city\":\"Testville\",\"postalCode\":\"12345\",\"password\":\"Password123!\"}"
						},
						"url": "{{base_url}}/auth/register"
					}
				},
				{
					"name": "02. Email déjà utilisé",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"pm.test('Statut 409 attendu', () => {",
									"    pm.response.to.have.status(409);",
									"});",
									"pm.test('Erreur email déjà utilisé', () => {",
									"    const json = pm.response.json();",
									"    pm.expect(json.success).to.eql(false);",
									"    pm.expect(json.message).to.include('email');",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\"email\":\"{{unique_email}}\",\"firstName\":\"Test\",\"lastName\":\"User\",\"phone\":\"0600000000\",\"address\":\"1 rue du test\",\"city\":\"Testville\",\"postalCode\":\"12345\",\"password\":\"Password123!\"}"
						},
						"url": "{{base_url}}/auth/register"
					}
				}
			]
		},
