{
	"info": {
		"_postman_id": "d4e5f6a1-b2c3-4a7b-8c9d-0e1f2a3b4c5d",
		"name": "Vite & Gourmand - Automated E2E",
		"description": "Collection pour les tests de bout en bout automatisés sur GitHub Actions.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Inscription",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const timestamp = Date.now();",
							"const randomId = Math.floor(Math.random() * 10000);",
							"pm.collectionVariables.set(\"user_email\", `test_${timestamp}_${randomId}@ci.com`);",
							"pm.collectionVariables.set(\"user_password\", `Password123!`);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Inscription OK\", () => {",
							"    pm.response.to.have.status(201);",
							"    const res = pm.response.json();",
							"    pm.expect(res.success).to.be.true;",
							"    pm.collectionVariables.set(\"user_id\", res.userId);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [ { "key": "Content-Type", "value": "application/json" } ],
				"body": {
					"mode": "raw",
					"raw": "{\"email\":\"{{user_email}}\",\"firstName\":\"Test\",\"lastName\":\"CI\",\"phone\":\"0612345678\",\"address\":\"1 rue de la CI\",\"city\":\"Testville\",\"postalCode\":\"12345\",\"password\":\"{{user_password}}\"}"
				},
				"url": { "raw": "{{base_url}}/api/auth/register", "host": [ "{{base_url}}" ], "path": [ "api", "auth", "register" ] }
			}
		},
		{
			"name": "2. Demande de reset",
			"event": [
				{
					"listen": "test",
					"script": { "exec": [ "pm.test(\"Demande Reset OK\", () => pm.response.to.have.status(200));" ], "type": "text/javascript" }
				}
			],
			"request": {
				"method": "POST",
				"header": [ { "key": "Content-Type", "value": "application/json" } ],
				"body": { "mode": "raw", "raw": "{\"email\":\"{{user_email}}\"}" },
				"url": { "raw": "{{base_url}}/api/auth/forgot-password", "host": [ "{{base_url}}" ], "path": [ "api", "auth", "forgot-password" ] }
			}
		},
		{
			"name": "3. Récupérer le token via la route de test",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Récupération Token OK\", () => {",
							"    pm.response.to.have.status(200);",
							"    const res = pm.response.json();",
							"    pm.expect(res.token).to.be.a('string');",
							"    pm.collectionVariables.set(\"reset_token\", res.token);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": { "raw": "{{base_url}}/api/test/latest-reset-token?email={{user_email}}", "host": [ "{{base_url}}" ], "path": [ "api", "test", "latest-reset-token" ], "query": [ { "key": "email", "value": "{{user_email}}" } ] }
			}
		},
		{
			"name": "4. Changer le mot de passe",
			"event": [
				{
					"listen": "prerequest",
					"script": { "exec": [ "pm.collectionVariables.set(\"new_password\", `NewPass${Date.now()}!`);" ], "type": "text/javascript" }
				},
				{
					"listen": "test",
					"script": { "exec": [ "pm.test(\"Changement MDP OK\", () => pm.response.to.have.status(200));" ], "type": "text/javascript" }
				}
			],
			"request": {
				"method": "POST",
				"header": [ { "key": "Content-Type", "value": "application/json" } ],
				"body": { "mode": "raw", "raw": "{\"token\":\"{{reset_token}}\",\"password\":\"{{new_password}}\"}" },
				"url": { "raw": "{{base_url}}/api/auth/reset-password", "host": [ "{{base_url}}" ], "path": [ "api", "auth", "reset-password" ] }
			}
		},
		{
			"name": "5. Login avec le nouveau mot de passe",
			"event": [
				{
					"listen": "test",
					"script": { "exec": [ "pm.test(\"Login avec nouveau MDP OK\", () => pm.response.to.have.status(200));" ], "type": "text/javascript" }
				}
			],
			"request": {
				"method": "POST",
				"header": [ { "key": "Content-Type", "value": "application/json" } ],
				"body": { "mode": "raw", "raw": "{\"email\":\"{{user_email}}\",\"password\":\"{{new_password}}\"}" },
				"url": { "raw": "{{base_url}}/api/auth/login", "host": [ "{{base_url}}" ], "path": [ "api", "auth", "login" ] }
			}
		}
	],
	"variable": [
		{ "key": "base_url", "value": "http://127.0.0.1:8000", "type": "string" }
	]
}
