{
	"info": {
		"_postman_id": "a1b2c3d4-e5f6-4a7b-8c9d-0e1f2a3b4c5d",
		"name": "Vite & Gourmand - Password Reset",
		"description": "Collection pour tester la fonctionnalité de réinitialisation de mot de passe.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Request Password Reset",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response is valid JSON\", function () {",
							"    pm.response.to.be.json;",
							"});",
							"",
							"pm.test(\"Success is true and has correct message\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.be.true;",
							"    pm.expect(jsonData.message).to.eql(\"Si cet email existe, un lien de réinitialisation a été envoyé.\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"votre_email_inscrit@example.com\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/auth/forgot-password",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"auth",
						"forgot-password"
					]
				},
				"description": "Déclenche l'envoi d'un email avec un token de réinitialisation.\\n\\n**Action :** Remplacez `votre_email_inscrit@example.com` par un email qui existe dans votre base de données."
			},
			"response": []
		},
		{
			"name": "2. Reset Password with Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response is valid JSON\", function () {",
							"    pm.response.to.be.json;",
							"});",
							"",
							"pm.test(\"Success is true and has correct message\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.success).to.be.true;",
							"    pm.expect(jsonData.message).to.eql(\"Mot de passe modifié avec succès. Vous pouvez vous connecter.\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"token\": \"COPIER_LE_TOKEN_RECU_DANS_LE_MAIL\",\n    \"password\": \"NouveauPassword123!\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/auth/reset-password",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"auth",
						"reset-password"
					]
				},
				"description": "Définit un nouveau mot de passe en utilisant le token reçu par email.\\n\\n**Action :** \\n1. Exécutez la première requête pour recevoir l'email.\\n2. Récupérez le token dans le lien reçu dans Mailtrap.\\n3. Collez ce token dans le body de cette requête."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8000/api",
			"type": "string"
		}
	]
}
